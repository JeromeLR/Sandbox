}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Identifiant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
      
        <th>
