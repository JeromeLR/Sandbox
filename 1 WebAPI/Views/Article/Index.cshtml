<div ng-app="myapp">
    <div ng-controller="ArticleCtrl">
        <form novalidate name="frmStudent" id="frmStudent" class="form-horizontal row-border">
            <br />
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-4 control-label" for="input17"> Nom</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="idFirstName"
                               class="form-control"
                               name="nameFirstName" ng-model="nom" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="input17"> Prix</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="idLastName"
                               class="form-control"
                               name="nameFirstName" ng-model="prix" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="input17"> Stock</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="idEmail"
                               class="form-control"
                               name="nameEmail" ng-model="stock" />
                    </div>
                </div>
               
                <div class="form-group">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-7">
                        <span id="save" class="btn btn-success margin-right-btn" ng-click="SaveUpdate()">
                            <i class="icon-save"></i> {{btnText}}
                        </span>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <hr />
            <table class="table table-hover general-table">
                <thead class="grid-top-panel">
                    <tr>
                        <th style="display:none">StudentID</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Stock</th>
                        
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="dataModel in articles">
                        <td style="display:none">{{dataModel.Identifiant}}</td>
                        <td> {{dataModel.Nom}}</td>
                        <td> {{dataModel.Prix}}</td>
                        <td>{{dataModel.Stock}}</td>
                        <td style="text-align:right; color:white">
                            <span>
                                <span id="save" class="btn btn-primary margin-right-btn" ng-click="GetArticleByID(dataModel)">
                                    Edit
                                </span>
                            </span>
                        </td>
                        <td style="text-align:right; color:white">
                            <span>
                                <span id="save" class="btn btn-danger margin-right-btn" ng-click="DeleteArticle(dataModel)">
                                    Delete
                                </span>
                            </span>
                        </td>
                    </tr>
                </tbody>
                <tfoot></tfoot>
            </table>

            <br />
            <br />
        </form>


    </div>
</div>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/ScriptsNg/Module/app.js"></script>
<script src="~/ScriptsNg/Controller/ArticleCtrl.js"></script>
<script src="~/ScriptsNg/Services/CrudService.js"></script>